/dts-v1/;
#include "at91sam9g35.dtsi"

/ {
    model = "Cryocon M18I-B";
    compatible = "atmel,at91sam9x5ek", "atmel,at91sam9x5", "atmel,at91sam9";
    

	memory {
		reg = <0x20000000 0x8000000>;
	};

	clocks {
		slow_xtal {
			clock-frequency = <32768>;
		};

		main_xtal {
			clock-frequency = <12000000>;
		};
	};

    aliases {
	serial1 = &usart1;
        spi0 = &spi0;
        spi1 = &spi1;
    };

	ahb {
		nand0: nand@40000000 {
			nand-bus-width = <8>;
			nand-ecc-mode = "hw";
			atmel,has-pmecc;	/* Enable PMECC */
			atmel,pmecc-cap = <2>;
			atmel,pmecc-sector-size = <512>;
			nand-on-flash-bbt;
			status = "okay";
            pinctrl-0 = <&pinctrl_nand &pinctrl_nand0_m18>;

			bootloader@0 {
				label = "at91bootstrap/barebox";
				reg = <0x0 0x20000>;
			};

			debugbarebox@40000 {
				label = "Debug barebox";
				reg = <0x40000 0x40000>;
			};

			env0@80000 {
				label = "Barebox environment";
				reg = <0x80000 0x40000>;
			};
			
			env1@c0000 {
				label = "Redundant barebox environment";
				reg = <0xc0000 0x40000>;
			};			
			
			oftree@180000 {
				label = "Fallback device tree";
				reg = <0x180000 0x80000>;
			};

			kernel@200000 {
				label = "Fallback kernel";
				reg = <0x200000 0x600000>;
			};

			rootfs@800000 {
				label = "rootfs";
				reg = <0x0800000 0x6000000>;
			};
			
			data@6800000 {
				label = "data";
				reg = <0x6800000 0x3800000>;
			};
			
			rootfs2@a000000 {
				label = "rootfs2";
				reg = <0xa000000 0x6000000>;
			};
		};
			
		apb {
			rtc@fffffeb0 {
				status = "okay";
			};

			mmc0: mmc@f0008000 {
				pinctrl-0 = <
					&pinctrl_mmc0_slot0_clk_cmd_dat0
					&pinctrl_mmc0_slot0_dat1_3>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					cd-gpios = <0>;
					non-removable;
				};
			};
			
			mmc1: mmc@f000c000 {
				status = "disabled";
			};

			dbgu: serial@fffff200 {
				status = "okay";
			};

			usart1: serial@f8020000 {
				status = "okay";
			};

			i2c0: i2c@f8010000 {
				status = "okay";
				lm73@49 {
					compatible = "lm73";
					reg = <0x49>;
				};
				24c512@50 {
					compatible = "24c512";
					reg = <0x50>;
					pagesize = <128>;
				};
			};

			pinctrl@fffff400 {

				nand0 {
					pinctrl_nand0_m18: nand0_m18 {
						atmel,pins =
							<3 14 0x0 0x1>;	/* PD14 WP# pull up */
					};
				};
			};

			ssc0: ssc@f0010000 {
				status = "disabled";
			};

            macb0: ethernet@f802c000 {
                phy-mode = "rmii";
                status = "okay";
				phy-reset-gpios = <&pioD 15 0>; /* PD15 GPIO phy reset */

                pinctrl-0 = <&pinctrl_macb0_rmii>;
            };

			spi0: spi@f0000000 {
				status = "okay";
				cs-gpios = <&pioA 14 0>, <&pioA 7 0>, <&pioA 1 0>, <&pioA 29 0>, <0>;
				rt;
                spidev@0 {
                    compatible = "spidev";
                    spi-cpha;
                    spi-max-frequency = <1000000>;
                    reg = <0>;
                };
                spidev@1 {
                    compatible = "spidev";
                    spi-max-frequency = <1000000>;
                    reg = <1>;
                };
                spidev@2 {
                    compatible = "spidev";
                    spi-max-frequency = <1000000>;
                    reg = <2>;
                };
                spidev@3 {
                    compatible = "spidev";
                    spi-max-frequency = <1000000>;
                    reg = <3>;	// PA29 is a NC placeholder for GPIO chip selects	
                };
			};

			spi1: spi@f0004000 {
			    status = "okay";
                cs-gpios = <&pioA 8 0>, <0>, <0>, <0>;
                spidev@0 {
                    compatible = "spidev";
                    spi-max-frequency = <3000000>;
                    reg = <0>;
                };
            };

			watchdog@fffffe40 {
				status = "okay";
			};
		};

		usb0: ohci@00600000 {
			status = "disabled";
		};

		usb1: ehci@00700000 {
			status = "disabled";
		};
	};

	i2c@0 {
		status = "okay";
		lm73_gpio@49 {
			compatible = "lm73";
			reg = <0x49>;
			status = "okay";
		};
		24c512_gpio@50 {
			compatible = "24c512";
			reg = <0x50>;
			pagesize = <128>;
		};
	};

	leds {
		compatible = "gpio-leds";

		heartbeat {
			label = "led1_ct";
			gpios = <&pioD 16 1>;
			linux,default-trigger = "heartbeat";
		};
		
		alarm {
			label = "led_alarm";
			gpios = <&pioC 16 1>;
			linux,default-trigger = "default-on";
		};
		
		relay1 {
			label = "relay1";
			gpios = <&pioC 29 1>;
			linux,default-trigger = "default-on";
		};
		
		relay2 {
			label = "relay2";
			gpios = <&pioC 21 1>;
			linux,default-trigger = "default-on";
		};		
	};
	
	gpio_keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;
		autorepeat;

		key_up {
			label = "key_up";
			gpios = <&pioD 18 1>;
			linux,code = <103>;
			gpio-key,wakeup;
		};
		
		key_down {
			label = "key_down";
			gpios = <&pioD 19 1>;
			linux,code = <108>;
			gpio-key,wakeup;
		};
		
		key_right {
			label = "key_right";
			gpios = <&pioD 20 1>;
			linux,code = <106>;
			gpio-key,wakeup;
		};
		
		key_select {
			label = "key_select";
			gpios = <&pioD 21 1>;
			linux,code = <0x161>;
			gpio-key,wakeup;
		};
	};

	
};
