/dts-v1/;
#include "sama5d3xmb.dtsi"
#include "sama5d3xdm.dtsi"

/ {
	model = "Atmel SAMA5D36-EK";
	compatible = "atmel,sama5d36ek", "atmel,sama5d3xmb", "atmel,sama5d3xcm", "atmel,sama5d3", "atmel,sama5";

	ahb {
		apb {
			usart1: serial@f0020000 {
				status = "disabled";
			};

			mmc0: mmc@f0000000 {
				status = "okay";
			};

			mmc1: mmc@f8000000 {
				status = "disabled";
			};

			watchdog@fffffe40 {
				status = "disabled";
			};

			adc0: adc@f8018000 {
				status = "disabled";
			};

			spi0: spi@f0004000 {
				status = "disabled";
			};

			ssc0: ssc@f0008000 {
				status = "disabled";
			};

			can0: can@f000c000 {
				status = "disabled";
			};

			i2c0: i2c@f0014000 {
				status = "disabled";
			};

			i2c1: i2c@f0018000 {
				status = "okay";
				pmic: act8865@5b {
					status = "okay";
				};
			};

			macb0: ethernet@f0028000 {
				status = "disabled";
			};

			macb1: ethernet@f802c000 {
				status = "disabled";
			};

			lcd_bus@f0030000 {
				status = "disabled";

				lcd@f0030000 {
					status = "disabled";
				};

				lcdovl1@f0030140 {
					status = "disabled";
				};

				lcdovl2@f0030240 {
					status = "disabled";
				};

				lcdheo1@f0030340 {
					status = "disabled";
				};
			};

			pinctrl@fffff200 {
				board {
					pinctrl_key_gpio: key_gpio_0 {
						atmel,pins = <AT91_PIOE 27 AT91_PERIPH_GPIO AT91_PINCTRL_PULL_UP_DEGLITCH>; /* PE27 gpio */
					};
				};
			};
		};

		usb0: gadget@00500000 {
			status = "disabled";
		};

		usb1: ohci@00600000 {
			status = "disabled";
		};

		usb2: ehci@00700000 {
			status = "disabled";
		};
	};

	leds {
		d3 {
			label = "d3";
			gpios = <&pioE 24 GPIO_ACTIVE_HIGH>;
		};
	};

	sound {
		status = "disabled";
	};

	gpio_keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;

		pb_user1 {
			label = "pb_user1";
			gpios = <&pioE 27 GPIO_ACTIVE_LOW>;
			linux,code = <0x100>;
			gpio-key,wakeup;
			pinctrl-names = "default";
			pinctrl-0 = <&pinctrl_key_gpio>;
		};
	};
};
