/dts-v1/;
/include/ "at91sam9g35.dtsi"

/ {

    model = "Cryocon M54";
    compatible = "atmel,at91sam9x5ek", "atmel,at91sam9x5", "atmel,at91sam9";
    
    memory {
        reg = <0x20000000 0x8000000>;
    };

    clocks {
        #address-cells = <1>;
        #size-cells = <1>;
        ranges;

        main_clock: clock@0 {
            compatible = "atmel,osc", "fixed-clock";
            clock-frequency = <12000000>;
        };
    };

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mtdblock1 rw rootfstype=ubifs ubi.mtd=1 root=ubi0:rootfs";
	};

    aliases {
        spi0 = &spi0;
        spi1 = &spi1;
    };

	ahb {          
	    nand0: nand@40000000 {
            nand-bus-width = <8>;
            nand-ecc-mode = "hw";
            atmel,has-pmecc;    /* Enable PMECC */
            atmel,pmecc-cap = <2>;
            atmel,pmecc-sector-size = <512>;
            nand-on-flash-bbt;
            status = "okay";

            pinctrl-names = "default";
            pinctrl-0 = <&pinctrl_nand0_m54>;

            at91bootstrap@0 {
                label = "at91bootstrap";
                reg = <0x0 0x40000>;
            };

            uboot@40000 {
                label = "u-boot";
                reg = <0x40000 0x80000>;
            };

            ubootenv@c0000 {
                label = "U-Boot Env";
                reg = <0xc0000 0x140000>;
            };

            kernel@200000 {
                label = "kernel";
                reg = <0x200000 0x600000>;
            };

            rootfs@800000 {
                label = "rootfs";
                reg = <0x800000 0x1f800000>;
            };
        };
		apb {

			mmc1: mmc@f000c000 {
				status = "disabled";
			};

			dbgu: serial@fffff200 {
				status = "okay";
			};

			usart1: serial@f8020000 {
				status = "okay";
			};

			i2c0: i2c@f8010000 {
				status = "okay";
			};

			pinctrl@fffff400 {
				board {
					pinctrl_mmc0_cd: mmc0_cd {
						atmel,pins =
							<3 15 0x0 0x5>;	/* PD15 gpio with pullup deglitch */
					};
				};

				macb0 {
					pinctrl_macb0_m54_phy_rst_n: macb0_m54_phy_rst_n-0 {
			                        atmel,pins = <0 3 0x0 0x1>;    /* PA3 gpio NRST_PHY pull up */
                    			};
				};

				nand0 {
					pinctrl_nand0_m54: nand0_m54-0 {
						atmel,pins =
							<3 14 0x0 0x1	/* PD14 CE# pull up */
							 3 18 0x0 0x1>;	/* PD18 WP# pull up */
					};
				};

                fpga0 {
				    pinctrl_board_fpga0: fpga0-board {
				        atmel,pins =
				            <0 13 0 0
				             3 16 0 0
				             3 17 0 0
				             3 18 0 0
				             0 12 0 0
				             0 11 0 0
				             0 14 0 0>;
				     };
				};

				fpga1 {
                    pinctrl_board_fpga1: fpga1-board {
                        atmel,pins =
                            <0 23 0 0
                             2 01 0 0
                             2 02 0 0
                             2 00 0 0
                             0 22 0 0
                             0 21 0 0
                             0  8 0 0
                             0  0 0 0>;
                      };
                };
			};

			mmc0: mmc@f0008000 {
				pinctrl-0 = <&pinctrl_mmc0_clk_cmd_dat0 &pinctrl_mmc0_dat1_3 &pinctrl_mmc0_cd>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					cd-gpios = <&pioD 15 0>;
				};
			};

            macb0: ethernet@f802c000 {
                phy-mode = "rmii";
                status = "okay";

                pinctrl-0 = <&pinctrl_macb0_rmii
                             &pinctrl_macb0_m54_phy_rst_n>;
            };

			spi0: spi@f0000000 {
				status = "okay";
				cs-gpios = <&pioA 14 0>, <&pioA 7 0>, <&pioA 1 0>, <0>;
                spidev@0 {
                    compatible = "spidev";
                    spi-max-frequency = <1000000>;
                    spi-cpha;
                    reg = <0>;
                };
			};

			spi1: spi@f0004000 {
			    status = "okay";
                cs-gpios = <&pioA 8 0>, <&pioA 0 0>, <0>, <0>;
                spidev@0 {
                    compatible = "spidev";
                    spi-max-frequency = <3000000>;
                    reg = <0>;
                };
            };

			fpga0: xilinx-sscu@0 {
			    compatible = "xilinx-sscu";
                status = "okay";
                pinctrl-names = "default";
                pinctrl-0 = <&pinctrl_board_fpga0>;
                gpios = <&pioA 13 0
                        &pioD 16 0
                        &pioD 17 0
                        &pioD 15 0
                        &pioA 12 0
                        &pioA 11 0      // SPI0 MISO
                        &pioA 14 0      // SPI0 CS0
                        &pioA 07 0      // SPI0 CS1
                        &pioA 01 0>;    // SPI0 CS2 (NC)
            };

            fpga1: xilinx-sscu@0 {
                compatible = "xilinx-sscu";
                status = "okay";
                pinctrl-names = "default";
                pinctrl-0 = <&pinctrl_board_fpga1>;
                gpios = <&pioA 23 0
                         &pioC 01 0
                         &pioC 02 0
                         &pioC  0 0
                         &pioA 22 0
                         &pioA 21 0     // SPI1 MISO
                         &pioA  8 0     // SPI1 CS0
                         &pioA  0 0		// SPI1 CS1
                         &pioD 21 0>;   // ASPI6 - purpose unknown
            };
		};

		usb0: ohci@00600000 {
			status = "okay";
			num-ports = <2>;
			atmel,vbus-gpio = <&pioD 19 1
					   &pioD 20 1
					  >;
		};

		usb1: ehci@00700000 {
			status = "disabled";
		};
	};
};
