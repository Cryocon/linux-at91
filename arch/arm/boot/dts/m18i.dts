/dts-v1/;
#include "at91sam9g35.dtsi"

/ {

    model = "Cryocon M18I";
    compatible = "atmel,at91sam9x5ek", "atmel,at91sam9x5", "atmel,at91sam9";
    
	aliases {
		serial1 = &usart1;
	};

    memory {
        reg = <0x20000000 0x8000000>;
    };

    clocks {
        #address-cells = <1>;
        #size-cells = <1>;
        ranges;

        main_clock: clock@0 {
            compatible = "atmel,osc", "fixed-clock";
            clock-frequency = <12000000>;
        };
    };

	slow_xtal {
		clock-frequency = <32768>;
	};

	main_xtal {
		clock-frequency = <12000000>;
	};

	chosen {
		bootargs = "console=ttyS0,115200 root=/dev/mmcblk0p2 ro rootwait";
	};

    aliases {
        spi0 = &spi0;
        spi1 = &spi1;
    };

	ahb {
		apb {
			rtc@fffffeb0 {
				status = "okay";
			};
			
			mmc1: mmc@f000c000 {
				status = "disabled";
			};

			dbgu: serial@fffff200 {
				status = "okay";
			};

			usart1: serial@f8020000 {
				status = "okay";
			};

			i2c0: i2c@f8010000 {
				status = "okay";
				24c512@50 {
					compatible = "24c512";
					reg = <0x50>;
					pagesize = <128>;
				};		
				lm73@49 {
					compatible = "lm73";
					reg = <0x49>;
				};
			};

			mmc0: mmc@f0008000 {
				pinctrl-0 = <
					&pinctrl_mmc0_slot0_clk_cmd_dat0
					&pinctrl_mmc0_slot0_dat1_3>;
				status = "okay";
				slot@0 {
					reg = <0>;
					bus-width = <4>;
					cd-gpios = <0>;
				};
			};

            macb0: ethernet@f802c000 {
                phy-mode = "rmii";
                status = "okay";
				phy-reset-gpios = <&pioD 15 0>; /* PD15 GPIO phy reset */

                pinctrl-0 = <&pinctrl_macb0_rmii>;
            };

			spi0: spi@f0000000 {
				status = "okay";
				cs-gpios = <&pioD 7 0>, <0>, <0>, <0>;
				rt;
                spidev@0 {
                    compatible = "spidev";
                    spi-cpha;
                    spi-max-frequency = <1000000>;
                    reg = <0>;
                };
			};

			spi1: spi@f0004000 {
			    status = "okay";
                cs-gpios = <&pioA 8 0>, <0>, <0>, <0>;
                spidev@0 {
                    compatible = "spidev";
                    spi-max-frequency = <3000000>;
                    reg = <0>;
                };
            };

			watchdog@fffffe40 {
				status = "okay";
			};
		};

		usb0: ohci@00600000 {
			status = "disabled";
		};

		usb1: ehci@00700000 {
			status = "disabled";
		};
	};
	
	leds {
		compatible = "gpio-leds";

		heartbeat {
			label = "led1_ct";
			gpios = <&pioD 16 1>;
			linux,default-trigger = "heartbeat";
		};
		
	};
	
	gpio_keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;
		autorepeat;

		key_up {
			label = "key_up";
			gpios = <&pioD 18 1>;
			linux,code = <103>;
			gpio-key,wakeup;
		};
		
		key_down {
			label = "key_down";
			gpios = <&pioD 19 1>;
			linux,code = <108>;
			gpio-key,wakeup;
		};
		
		key_right {
			label = "key_right";
			gpios = <&pioD 20 1>;
			linux,code = <106>;
			gpio-key,wakeup;
		};
		
		key_select {
			label = "key_select";
			gpios = <&pioD 21 1>;
			linux,code = <0x161>;
			gpio-key,wakeup;
		};
	};

	
};
